<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
        package="hrzhao.beans"
        >
    <class name="AppConfigBean" table="appconfig">
        <id name="appId" column="app_id">
            <generator class="assigned"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="visible" column="visible" type="boolean"/>
        <property name="categoryId" column="category_id" type="string"/>
        <property name="param" column="param" type="string"/>
        <property name="multiInstance" column="multi_instance" type="boolean"/>
        <property name="description" column="description" type="string"/>
        <property name="path" column="path" type="string"/>
        <property name="order" column="order" type="integer"/>
        <property name="icon" column="icon" type="string"/>
    </class>

</hibernate-mapping>
