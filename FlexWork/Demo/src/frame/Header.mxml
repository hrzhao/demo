<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="90">
	<fx:Metadata>
		[Event(name="homeButtonClick", type="mx.events.FlexEvent")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			protected function btn_home_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.dispatchEvent(new FlexEvent("homeButtonClick"));
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:BorderContainer width="100%" height="100%" backgroundColor="#cccccc" borderVisible="false">
		<s:Image source="@Embed('assets/header.png')" height="90" />
		<s:Button id="btn_home" click="btn_home_clickHandler(event)" 
				  height="90" width="100" right="0" label="HOME" fontSize="24"/>
	</s:BorderContainer>
</s:Group>
