<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%"
		 
		 >
	<fx:Script>
		<![CDATA[
			import entities.User;
			
			import events.LoginEvent;
			
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			import mx.utils.StringUtil;
			
			import utils.MD5;
			protected function ro_faultHandler(event:FaultEvent):void
			{
				// TODO Auto-generated method stub
				txtResult.text = event.message.toString();
				
			}
			protected function ro_resultHandler(event:ResultEvent):void
			{
				// TODO Auto-generated method stub
				var data:Object = event.result.data;
				if(event.result.state == "success" && data != null){
					var user:User = new User();
					user.id = data.id;
					user.username = data.username;
					user.password = data.password;
					user.uid = data.uid;
					this.dispatchEvent(new LoginEvent("loginSuccess",user));
				}
				txtResult.text = "密码或用户名有错";
				
			}
			protected function btn_login_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				var username:String = StringUtil.trim(txt_username.text);
				var password:String = MD5.getMD5(txt_password.text);
				ro.checkUser(username,password);
			}
		]]>
	</fx:Script>
	<fx:Metadata>
		[Event(name="loginSuccess", type="events.LoginEvent")]
	</fx:Metadata>
	<fx:Declarations>
		<s:RemoteObject id="ro" destination="userService" result="ro_resultHandler(event)" fault="ro_faultHandler(event)"/>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:layout>
		<s:VerticalLayout gap="0"/>
	</s:layout>
	<s:Group width="100%" height="200">
		
	</s:Group>
	<s:HGroup width="100%" height="350" gap="0">
		<s:Group width="100%" height="100%">
			
		</s:Group>
		<s:Group width="400" height="100%">
			<s:layout>
				<s:BasicLayout/>
			</s:layout>
			<s:Button id="btn_login" left="69" top="124" width="185" label="登录"
					  click="btn_login_clickHandler(event)"/>
			<s:TextInput id="txt_username" left="87" top="60" width="194" prompt="请输入用户名"/>
			<s:TextInput id="txt_password" left="87" top="90" width="194" prompt="请输入密码"/>
			<s:Label left="33" top="66" fontSize="14" text="用户名"/>
			<s:Label left="37" top="94" fontSize="14" text="标  签"/>
			<s:TextInput id="txtResult" x="30" y="154" width="302" height="172"/>
			
		</s:Group>
	</s:HGroup>
	<s:Group width="100%" height="100%">
		
	</s:Group>
</s:Group>
