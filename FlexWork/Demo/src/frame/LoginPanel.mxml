<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%"
		 creationComplete="creationCompleteHandler(event)" xmlns:UI="common.UI.*"
		 >
	<fx:Script>
		<![CDATA[
			import entities.UserBean;
			
			import events.LoginEvent;
			
			import mx.controls.Alert;
			import mx.events.CloseEvent;
			import mx.events.FlexEvent;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			import mx.utils.StringUtil;
			
			import utils.MD5;
			import utils.MessageBox;
			protected function ro_faultHandler(event:FaultEvent):void
			{
				// TODO Auto-generated method stub
				progressLabel.visible = false;
				MessageBox.show(event.message.toString());
			}
			protected function ro_resultHandler(event:ResultEvent):void
			{
				txt_password.removeEventListener(KeyboardEvent.KEY_DOWN, tbxPwd_keyDownHandler);
				progressLabel.visible = false;
				// TODO Auto-generated method stub
				var data:Object = event.result.data;
				if(event.result.state == "success" && data != null){
					if(event.result.data is UserBean){
						var user:UserBean = UserBean(event.result.data);
						this.dispatchEvent(new LoginEvent("loginSuccess",user));
					}
				}else{
					Alert.show("密码或用户名有错","",4,this,alertFaultHandler);
					txt_password.setFocus();
				}
			}
			private function alertFaultHandler(event:CloseEvent):void{
				txt_password.addEventListener(KeyboardEvent.KEY_DOWN, tbxPwd_keyDownHandler);
			}
			protected function tbxPwd_keyDownHandler(event:KeyboardEvent):void
			{
				if(event.keyCode == 13 && btn_login.enabled)
					btn_login_clickHandler(null);
			}
			protected function btn_login_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				if(!progressLabel.visible ){
					progressLabel.visible  = false;
					var username:String = StringUtil.trim(txt_username.text);
					var password:String = MD5.getMD5(txt_password.text);
					ro.checkUser(username,password);
				}
			}
			
			protected function creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				//开发时用
				CONFIG::Debug
				{
					txt_username.text = "admin";
					txt_password.text = "123";
				}
				txt_password.addEventListener(KeyboardEvent.KEY_DOWN, tbxPwd_keyDownHandler);
				if(txt_username.text == "")
					txt_username.setFocus();
				else
					txt_password.setFocus();
				CONFIG::Debug
				{
					btn_login_clickHandler(null);
				}
			}
		]]>
	</fx:Script>
	<fx:Metadata>
		[Event(name="loginSuccess", type="events.LoginEvent")]
	</fx:Metadata>
	<fx:Declarations>
		<s:RemoteObject id="ro" destination="userService" result="ro_resultHandler(event)" fault="ro_faultHandler(event)"/>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:VerticalLayout gap="0"/>
		</s:layout>
		<s:Group width="100%" height="200">
			
		</s:Group>
		<s:HGroup width="100%" height="350" gap="0">
			<s:Group width="100%" height="100%">
				
			</s:Group>
			<s:Group width="600" height="100%">
				<s:layout>
					<s:BasicLayout/>
				</s:layout>
				<s:Label left="33" top="66" fontSize="14" text="用户名"/>
				<s:TextInput id="txt_username" left="87" top="60" width="194" prompt="请输入用户名"
							 text=""/>
				<s:Label left="37" top="94" fontSize="14" text="密  码"/>
				<s:TextInput id="txt_password" left="87" top="90" width="194" displayAsPassword="true"
							 prompt="请输入密码" text=""/>
				<s:Button id="btn_login" left="69" top="124" width="185" label="登录"
						  click="btn_login_clickHandler(event)"/>
				
			</s:Group>
		</s:HGroup>
		<s:Group width="100%" height="100%">
			
		</s:Group>
	</s:Group>
	<UI:LabelProgress id="progressLabel" visible="false" label="正在登录"/>
</s:Group>
