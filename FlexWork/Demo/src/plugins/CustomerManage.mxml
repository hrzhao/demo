<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="400" height="300"
		 creationComplete="group1_creationCompleteHandler(event)"
		 >
	<fx:Script>
		<![CDATA[
			import mx.controls.AdvancedDataGrid;
			import mx.events.FlexEvent;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				ro.getCustomerList();
			}
			
			protected function ro_resultHandler(event:ResultEvent):void
			{
				// TODO Auto-generated method stub
				if(event.result.hasOwnProperty("state") && event.result.state == "success"){
					var naviCont:NavigatorContent = new NavigatorContent();
					naviCont.percentHeight = 100;
					naviCont.percentWidth = 100;
					naviCont.label ="会员信息";
					var dataGrid:AdvancedDataGrid = new AdvancedDataGrid();
					dataGrid.dataProvider = event.result.data;
					dataGrid.percentWidth = 100;
					dataGrid.percentHeight = 100;
					naviCont.addElement(dataGrid);
					viewStack.addElementAt(naviCont,0);
					tabBar.selectedIndex = 0;
				}
				
				
			}
			
			protected function ro_faultHandler(event:FaultEvent):void
			{
				// TODO Auto-generated method stub
				txt_result.text = event.message.toString();
				
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<s:RemoteObject id="ro" destination="customerService" result="ro_resultHandler(event)" fault="ro_faultHandler(event)"/>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:layout>
		<s:VerticalLayout gap="0"/>
	</s:layout>
	<s:TabBar id="tabBar" height="32" labelField="label" dataProvider="{viewStack}"/>
	<mx:ViewStack id="viewStack" width="100%" height="100%">
		<s:NavigatorContent label="状态">
			<s:TextArea id="txt_result" text="ready" width="500" height="400"/>
		</s:NavigatorContent>
		
	</mx:ViewStack>
</s:Group>
